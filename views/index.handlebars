<body>

  <div class="container">

    <h1 class="col-md-6 col-md-offset-4">YUMMY BURGERS!</h1>

    <br>

    <div class="col-md-6 col-md-offset-3">
    <h2>Which burger do you want to add? </h2>
      <div class="col-md-6 col-md-offset-3">
        <form action="/add" method="POST">
        	<textarea name="burger_name" placeholder=""></textarea>
          <br>
        	<input class="col-md-offset-3" type="submit" type="button" class="btn btn-primary"></input>
        </form>
      </div>
    </div>

    <div class="col-md-4 col-md-offset-2">
      <h2>Ready to Eat Burgers!</h2>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button type="submit type="button" class="btn btn-primary btn-xs" ">EAT EAT EAT</button>
                </form>

              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-md-4">
      <h2>Devoured Burgers</h2>
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.burger_name}}
                <!-- <form action="/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                  <button type="submit">UNEAT</button>
                </form> -->
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>

  </div>

</body>
