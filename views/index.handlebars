<h1>YUMMY BURGERS!</h1>

<form action="/add" method="POST">
	<textarea name="burger_name" placeholder=""></textarea>
	<input type="submit"></input>
</form>


<h2>Undevoured Burgers</h2>
{{#each burgers}}
	<p>{{id}} : {{burger_name}}</p>
{{/each}}

<h2>Devoured Burgers</h2>
{{#each burgers}}
	<p>{{id}} : {{burger_name}}</p>
{{/each}}


